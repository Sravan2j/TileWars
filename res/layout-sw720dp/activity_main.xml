<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entireLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/gameid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Select a Game"
                android:textColor="#001082"
                android:textSize="40sp"
                android:textStyle="bold|italic"
                android:typeface="serif" >
            </TextView>
        </TableRow>
    </TableLayout>

    <com.games.tilewars.DemoLinearLayout
        android:id="@+id/demoLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tableLayout1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/frm_linear_00"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:animateLayoutChanges="true"
            android:padding="10dp"
            android:visibility="gone" >

            <View
                android:id="@+id/l0b1"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <View
                android:id="@+id/l0b2"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <View
                android:id="@+id/l0b3"
                android:layout_width="0dp"
                android:layout_height="0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frm_linear_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:animateLayoutChanges="true"
            android:baselineAligned="false"
            android:gravity="bottom"
            android:padding="10dp" >

            <View
                android:id="@+id/l1b1"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:visibility="gone" />

            <View
                android:id="@+id/l1b1e"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/l1b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#C40401"
                android:minHeight="120dp"
                android:minWidth="120dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="120dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/l1b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0101B0"
                android:minHeight="120dp"
                android:minWidth="120dp" />

            <View
                android:id="@+id/l1b4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frm_linear_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:animateLayoutChanges="true"
            android:baselineAligned="false"
            android:gravity="top"
            android:padding="10dp" >

            <View
                android:id="@+id/l2b1"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:visibility="gone" />

            <View
                android:id="@+id/l2b1e"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/l2b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFEE22"
                android:minHeight="120dp"
                android:minWidth="120dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="120dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/l2b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00DE17"
                android:minHeight="120dp"
                android:minWidth="120dp" />

            <View
                android:id="@+id/l2b4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frm_linear_03"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:animateLayoutChanges="true"
            android:padding="10dp"
            android:visibility="gone" >

            <View
                android:id="@+id/l3b1"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <View
                android:id="@+id/l3b2"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <View
                android:id="@+id/l3b3"
                android:layout_width="0dp"
                android:layout_height="0dp" />
        </LinearLayout>
    </com.games.tilewars.DemoLinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/playbgbrown"
                android:gravity="center_horizontal"
                android:text="Play"
                android:textColor="#808080"
                android:textSize="30sp" >
            </TextView>

            <TextView
                android:id="@+id/sound"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:clickable="true"
                android:drawableTop="@drawable/volumeon"
                android:gravity="center_horizontal" >
            </TextView>

            <TextView
                android:id="@+id/games"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/gearbg"
                android:gravity="center_horizontal"
                android:text="Games"
                android:textColor="#001082"
                android:textSize="30sp" >
            </TextView>
        </TableRow>
    </TableLayout>

</RelativeLayout>