	<TextView android:id="@+id/sjsu_logo" android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="Developer: Sravan Kumar Reddy Javaji\n\nEmail: sravan2j@gmail.com\n"
		android:typeface="serif"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		 />	

